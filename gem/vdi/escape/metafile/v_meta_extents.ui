!item [Binding:]
!begin_verbatim
void v_meta_extents (int16_t handle, int16_t min_x,
                     int16_t min_y, int16_t max_x, int16_t max_y)
{
   ptsin[0] = min_x;
   ptsin[1] = min_y;
   ptsin[2] = max_x;
   ptsin[3] = max_y;

   contrl[0] = 5;
   contrl[1] = 2;
   contrl[3] = 0;
   contrl[5] = 98;
   contrl[6] = handle;

   vdi ();
}
!end_verbatim

