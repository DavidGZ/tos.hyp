contrl+8  !! contrl[4]     !! 0     # entry in intout
contrl+10 !! contrl[5]     !! 100
contrl+12 !! contrl[6]     !! handle
intin     !! intin[0..n-1] !! filename[0..n-1]
!end_table

(!ende_liste)
