                        int16_t *dev_exists, int8_t *file_path,
                        int8_t *file_name, int8_t *name)
{
   intin[0] = device;
   intin[1..2] = file_path;
   intin[3..4] = file_name;
   intin[5..6] = name;

   contrl[0] = 248;
   contrl[1] = 0;
   contrl[3] = 7;
   contrl[5] = 4242;
   contrl[6] = handle;

   vdi ();

   *dev_exists = intout[0];
   return ( intout[1] );
}
