!item [contrl[0!] =]
111;
!item [contrl[1!] =]
0;
!item [contrl[2!] =]
0;
!item [contrl[3!] =]
0;
!item [contrl[4!] =]
37;
!item [contrl[6!] =]
handle;
!item [intout[0..36!] =]
pcur_form[0..36];
!end_xlist

(!ende_liste)
!end_node

