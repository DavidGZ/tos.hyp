 #include <tos.h>

void Mfpint( int16_t number, int16_t (*vector)() );
!item [Assembler:]
!begin_verbatim
pea       vector       ; Offset 4
move.w    number,-(sp) ; Offset 2
move.w    #13,-(sp)    ; Offset 0
trap      #14          ; XBIOS aufrufen
addq.l    #8,sp        ; Stack korrigieren
!end_verbatim
